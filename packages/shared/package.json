{
  "name": "@contactship/shared",
  "version": "1.0.0",
  "description": "Shared for the Calm Pulse project",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "echo 'No build step'",
    "clean": "del-cli dist tsconfig.tsbuildinfo",
    "compile": "tsc --noEmit",
    "coverage": "vitest run --coverage ",
    "format": "prettier --config ../config/.prettierrc --ignore-path ../../.prettierignore --write . && prettier-package-json --write ./package.json",
    "lint": "eslint src --flag v10_config_lookup_from_file --max-warnings 0 --ext .ts,.tsx",
    "lint:fix": "eslint src --flag v10_config_lookup_from_file --max-warnings 0 --fix --ext .ts,.tsx",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "types": "./src/index.ts",
  "dependencies": {
    "@contactship/ai": "workspace:*",
    "@contactship/config": "workspace:*",
    "@contactship/db": "workspace:*",
    "@contactship/types": "workspace:*",
    "date-fns": "catalog:",
    "date-fns-tz": "catalog:",
    "drizzle-orm": "catalog:",
    "limax": "catalog:",
    "winston": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prettier-package-json": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  }
}
